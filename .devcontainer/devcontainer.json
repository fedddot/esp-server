{
	"name": "espdev-container",
	"image": "esp-dev:latest",
	"privileged": true,
	"runArgs": [ "--network=host", "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"mounts": [
		"source=/dev,target=/dev,type=bind"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-azuretools.vscode-containers",
				"mhutchie.git-graph",
				"twxs.cmake",
				"ms-vscode.cmake-tools",
				"josetr.cmake-language-support-vscode",
				"zxh404.vscode-proto3"
			],
			"settings": {
    			"idf.adapterTargetName": "esp32s2",
    			"idf.port": "/dev/ttyACM0",
				"clangd.arguments": ["--query-driver=/opt/esp/tools/xtensa-esp-elf/esp-15.1.0_20250607/xtensa-esp-elf/bin/xtensa-esp32s2-elf-gcc"],
				"clangd.path": "/usr/bin/clangd",
				"clangd.enableCodeCompletion": true,
				"clangd.enableHover": true,
				"clangd.enable": true
			}
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/project,type=bind",
	"workspaceFolder": "/project"
}
